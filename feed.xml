---
layout: compress
---

{% capture source %}
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
	<id>{{ site.url | absolute_url }}</id>
	<title>{{ site.title | xml_escape }}</title>
	<subtitle>{{ site.description | xml_escape }}</subtitle>
	<updated>{{ site.time | date_to_xmlschema }}</updated>
	<author>
		<name>{{ site.social.name | xml_escape }}</name>
		<email>{{ site.social.email | xml_escape }}</email>
		<uri>{{ site.url | absolute_url }}</uri>
	</author>
	<link rel="self" type="application/atom+xml" href="{{ page.url | absolute_url }}" />
	<link rel="alternate" type="text/html" hreflang="{{ site.lang }}" href="{{ site.url | absolute_url }}" />
	<rights>Â© {{ 'now' | date: '%Y' }} {{ site.social.name | xml_escape }}</rights>
	<icon>{{ site.baseurl }}/favicon.ico</icon>
	<logo>{{ site.baseurl }}/favicon.ico</logo>

	<!-- Projects -->
	{% for project in site.projects %}
	{% if project.status == "public" %}
	<entry>
		<title>{{ project.title | xml_escape }}</title>
		<link href="{{ site.url }}{{ project.url }}" />
		<updated>{{ project.date | date_to_xmlschema }}</updated>
		<id>{{ site.url }}{{ project.id }}</id>
		<content type="html">{{ project.content | xml_escape }}</content>
	</entry>
	{% endif %}
	{% endfor %}

	{% for project in site.projects limit: 5 %}
	{% assign project_url = project.url | absolute_url %}
	<entry>
		<title>{{ project.title | xml_escape }}</title>
		<link href="{{ project_url }}" rel="alternate" type="text/html" title="{{ project.title | xml_escape }}" />
		<published>{{ project.date | date_to_xmlschema }}</published>
		{% if project.updated %}
		<updated>{{ project.updated | date_to_xmlschema }}</updated>
		{% else %}
		<updated>{{ project.date | date_to_xmlschema }}</updated>
		{% endif %}
		<id>{{ project_url }}</id>
		<content type="html">{{ project.content | xml_escape }}</content>
		<author>
			<name>{{ project.author | default: site.social.name | xml_escape }}</name>
		</author>

		{% if project.categories %}
		{% for category in project.categories %}
		<category term="{{ category | xml_escape }}" />
		{% endfor %}
		{% endif %}

		{% if project.summary %}
		<summary>{{ project.summary | strip | xml_escape }}</summary>
		{% else %}
		<summary>
		{% assign content = project.content %}
		{% if content contains '<td class="rouge-gutter gl"><pre class="lineno">' %}
		{% assign content = content | replace: '<td class="rouge-gutter gl"><pre class="lineno">', '<!-- <td class="rouge-gutter gl"><pre class="lineno">' %}
		{% assign content = content | replace: '</td><td class="rouge-code">', '</td> --><td class="rouge-code">' %}
		{% endif %}
		{{ content | strip_html | truncate: 400 | xml_escape }}
		</summary>
		{% endif %}
	</entry>
	{% endfor %}
</feed>
{% endcapture %}
{{ source | replace: '&', '&amp;' }}